<div class="registration-bg">
  <div class="container">
    <div class="row">
      <div class="col-md-4 offset-md-4">
        <div class="log-in card">
          
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>

            <div class="card-body">
              <div class="card-title text-center">
                <h2>Create Your Account</h2>
              </div>
              <%= f.input :email,
                          required: true,
                          autofocus: true,
                          label: false,
                          placeholder: 'Email',
                          input_html: { autocomplete: "email", class: 'form-control mb-2' }%>
              <%= f.input :user_name, required: true, label: false, placeholder: 'User name', input_html: { class: 'form-control mb-2' }  %>
              <%= f.input :password,
                          required: true,
                          label: false,
                          placeholder: 'Password',
                          input_html: { autocomplete: "new-password", class: 'form-control mb-2' } %>
              <%= f.input :password_confirmation,
                          required: true,
                          label: false,
                          placeholder: 'Confirm password',
                          input_html: { autocomplete: "new-password", class: 'form-control mb-2' } %>
              <%= f.button :submit, "Sign up", class: 'btn btn-info btn-block' %>

            </div>

          <% end %>
          
        </div>
      </div>
    </div>
  </div>
</div>

